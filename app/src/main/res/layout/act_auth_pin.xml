<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/putih"
    tools:context="com.exomatik.kapcake.Authentication.ActAuthPin">

    <ImageButton
        android:id="@+id/btn_logout"
        android:layout_width="@dimen/width60"
        android:layout_height="@dimen/width60"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/margin_big"
        android:background="@drawable/border_putih_radius_gray"
        android:src="@drawable/btn_close" />
    <WebView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/web"
        android:visibility="gone"
        >

    </WebView>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:layout_centerInParent="true"
        android:scrollbars="none"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <RelativeLayout
                android:id="@+id/rl_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/width40"
                >

                <TextView
                    android:id="@+id/text_halo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/monserrat_regular"
                    android:text="@string/text_halo"
                    android:textColor="@color/hitam"
                    android:textSize="@dimen/title_very_big_font" />

                <TextView
                    android:id="@+id/text_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_small"
                    android:layout_toRightOf="@+id/text_halo"
                    android:fontFamily="@font/monserrat_regular"
                    android:textColor="@color/hitam"
                    android:textSize="@dimen/title_very_big_font"
                    android:textStyle="bold"
                    android:textAppearance="?android:textAppearanceLarge"
                    />
            </RelativeLayout>

            <View
                android:id="@+id/view"
                android:layout_width="@dimen/width50"
                android:layout_height="@dimen/margin_small"
                android:layout_below="@+id/rl_top"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin_small"
                android:background="@drawable/border_btn_gradient_orange"
                android:elevation="@dimen/margin_small" />

            <TextView
                android:id="@+id/text_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/margin_standard"
                android:fontFamily="@font/monserrat_regular"
                android:text="@string/text_default"
                android:textColor="@color/gray2"
                android:textSize="@dimen/title_font" />

            <LinearLayout
                android:id="@+id/ln_pin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_default"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin_standard"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_1"
                    android:layout_width="@dimen/margin_standard_big"
                    android:layout_height="@dimen/margin_standard_big"
                    android:layout_marginRight="@dimen/margin_standard" />

                <ImageView
                    android:id="@+id/img_2"
                    android:layout_width="@dimen/margin_standard_big"
                    android:layout_height="@dimen/margin_standard_big"
                    android:layout_marginRight="@dimen/margin_standard" />

                <ImageView
                    android:id="@+id/img_3"
                    android:layout_width="@dimen/margin_standard_big"
                    android:layout_height="@dimen/margin_standard_big"
                    android:layout_marginRight="@dimen/margin_standard" />

                <ImageView
                    android:id="@+id/img_4"
                    android:layout_width="@dimen/margin_standard_big"
                    android:layout_height="@dimen/margin_standard_big" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ln_pin"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin_standard"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ln_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_1"
                        android:layout_width="@dimen/width80"
                        android:layout_height="@dimen/width60"
                        android:layout_margin="@dimen/margin_standard"
                        android:background="@drawable/border_round_full_hitam_putih"
                        android:elevation="@dimen/margin_small"
                        android:fontFamily="@font/monserrat_regular"
                        android:text="1"
                        android:textColor="@color/hitam"
                        android:textSize="@dimen/title_big_font" />

                    <Button
                        android:id="@+id/btn_2"
                        android:layout_width="@dimen/width80"
                        android:layout_height="@dimen/width60"
                        android:layout_margin="@dimen/margin_standard"
                        android:background="@drawable/border_round_full_hitam_putih"
                        android:elevation="@dimen/margin_small"
                        android:fontFamily="@font/monserrat_regular"
                        android:text="2"
                        android:textColor="@color/hitam"
                        android:textSize="@dimen/title_big_font" />

                    <Button
                        android:id="@+id/btn_3"
                        android:layout_width="@dimen/width80"
                        android:layout_height="@dimen/width60"
                        android:layout_margin="@dimen/margin_standard"
                        android:background="@drawable/border_round_full_hitam_putih"
                        android:elevation="@dimen/margin_small"
                        android:fontFamily="@font/monserrat_regular"
                        android:text="3"
                        android:textColor="@color/hitam"
                        android:textSize="@dimen/title_big_font" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ln_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ln_1"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_4"
                        android:layout_width="@dimen/width80"
                        android:layout_height="@dimen/width60"
                        android:layout_margin="@dimen/margin_standard"
                        android:background="@drawable/border_round_full_hitam_putih"
                        android:elevation="@dimen/margin_small"
                        android:fontFamily="@font/monserrat_regular"
                        android:text="4"
                        android:textColor="@color/hitam"
                        android:textSize="@dimen/title_big_font" />

                    <Button
                        android:id="@+id/btn_5"
                        android:layout_width="@dimen/width80"
                        android:layout_height="@dimen/width60"
                        android:layout_margin="@dimen/margin_standard"
                        android:background="@drawable/border_round_full_hitam_putih"
                        android:elevation="@dimen/margin_small"
                        android:fontFamily="@font/monserrat_regular"
                        android:text="5"
                        android:textColor="@color/hitam"
                        android:textSize="@dimen/title_big_font" />

                    <Button
                        android:id="@+id/btn_6"
                        android:layout_width="@dimen/width80"
                        android:layout_height="@dimen/width60"
                        android:layout_margin="@dimen/margin_standard"
                        android:background="@drawable/border_round_full_hitam_putih"
                        android:elevation="@dimen/margin_small"
                        android:fontFamily="@font/monserrat_regular"
                        android:text="6"
                        android:textColor="@color/hitam"
                        android:textSize="@dimen/title_big_font" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ln_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ln_2"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_7"
                        android:layout_width="@dimen/width80"
                        android:layout_height="@dimen/width60"
                        android:layout_margin="@dimen/margin_standard"
                        android:background="@drawable/border_round_full_hitam_putih"
                        android:elevation="@dimen/margin_small"
                        android:fontFamily="@font/monserrat_regular"
                        android:text="7"
                        android:textColor="@color/hitam"
                        android:textSize="@dimen/title_big_font" />

                    <Button
                        android:id="@+id/btn_8"
                        android:layout_width="@dimen/width80"
                        android:layout_height="@dimen/width60"
                        android:layout_margin="@dimen/margin_standard"
                        android:background="@drawable/border_round_full_hitam_putih"
                        android:elevation="@dimen/margin_small"
                        android:fontFamily="@font/monserrat_regular"
                        android:text="8"
                        android:textColor="@color/hitam"
                        android:textSize="@dimen/title_big_font" />

                    <Button
                        android:id="@+id/btn_9"
                        android:layout_width="@dimen/width80"
                        android:layout_height="@dimen/width60"
                        android:layout_margin="@dimen/margin_standard"
                        android:background="@drawable/border_round_full_hitam_putih"
                        android:elevation="@dimen/margin_small"
                        android:fontFamily="@font/monserrat_regular"
                        android:text="9"
                        android:textColor="@color/hitam"
                        android:textSize="@dimen/title_big_font" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ln_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ln_3"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_clear"
                        android:layout_width="@dimen/width80"
                        android:layout_height="@dimen/width60"
                        android:layout_margin="@dimen/margin_standard"
                        android:background="@drawable/border_round_full_hitam_putih"
                        android:elevation="@dimen/margin_small"
                        android:fontFamily="@font/monserrat_regular"
                        android:text="Clear"
                        android:textAllCaps="false"
                        android:textColor="@color/hitam"
                        android:textSize="@dimen/title_big_font" />

                    <Button
                        android:id="@+id/btn_0"
                        android:layout_width="@dimen/width80"
                        android:layout_height="@dimen/width60"
                        android:layout_margin="@dimen/margin_standard"
                        android:background="@drawable/border_round_full_hitam_putih"
                        android:elevation="@dimen/margin_small"
                        android:fontFamily="@font/monserrat_regular"
                        android:text="0"
                        android:textColor="@color/hitam"
                        android:textSize="@dimen/title_big_font" />
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>